// My personal styles
{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-useless-return": "error",
        "brace-style": [1,"allman", { "allowSingleLine": true }],
        "space-after-keywords": ["error", "never"]    }
}