<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<a class="button is-primary" href="/application/add">Create a new application</a>

{{#if applications}}

	<table class="table">
		<thead>
			<tr>
				<th>Job title</th>
				<th>Date posted</th>
				<th>Date applied</th>
				<th>Action taken</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each applications as |app|}}
				<tr>
					<td>{{app.jobTitle}}</td>
					<td>{{toShortDate app.postedDate}}</td>
					<td>{{toShortDate app.applicationDate}}</td>
					<td>{{app.action}}</td>
					<td>
						<a class="button is-warning is-fullwidth" href="/application/edit/{{app._id}}" title="Edit application"><i class="fa-solid fa-edit icon"></i></a>
						<a
							class="button is-danger is-fullwidth"
								title="Delete application"
							href="/application/delete/{{app._id}}"
							onclick="return confirm('Are you sure you want to delete this')"
						><i class="fa-solid fa-minus icon"></i></a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>


{{/if}}