<h1 class="title">{{title}}</h1>
<form action="register" method="post" class="box">
	<label for="email" class="label">Email</label>
	<input type="email" placeholder="email@domain.ca" spellcheck="true" class="input" autofocus required id="email" name="email" />
	<label for="password" class="label">Password</label>
	<input type="password" placeholder="Password" spellcheck="true" class="input" required id="password" name="password" />
	<label for="passwordConfirm" class="label">Confirm password</label>
    {{!-- TODO: add js to change visual that passwords do not match and check for it --}}
	<input type="password" placeholder="Confirm password" spellcheck="true" class="input" required id="passwordConfirm" name="passwordConfirm" />
	<button type="submit" class="button is-primary" id="submitButton">Register</button>
</form>