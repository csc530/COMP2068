{
	"root": true,
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["/assignment1-portfolio/portfolio prototype/", "git/"],
	"rules": {
		// My personal styles
		"indent": ["error", "tab"],
		"semi": ["error", "always"],
		"no-useless-return": "error",
		//nodeJS-user-style guide formatting settings
		//Got rid of stylitic choices I just could not stand
		"array-bracket-spacing": [2, "never"],
		"block-scoped-var": 2,
		//"brace-style": [2, "1tbs"],
		"camelcase": 1,
		"computed-property-spacing": [2, "never"],
		//"curly": 2,
		"eol-last": 2,
		"eqeqeq": [2, "smart"],
		"max-depth": [1, 3],
		//"max-len": [1, 80],
		// "max-statements": [1, 15],
		"new-cap": 1,
		"no-extend-native": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-trailing-spaces": 2,
		"no-unused-vars": 1,
		"no-use-before-define": [2, "nofunc"],
		"object-curly-spacing": [2, "never"],
		"quotes": [2, "single", "avoid-escape"],
		//dup: "semi": [2, "always"],
		//I changed it to false for after #preferences
		"keyword-spacing": [
			2,
			{
				"before": true,
				"after": false
			}
		],
		"space-unary-ops": 2
	}
}
